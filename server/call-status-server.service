[Unit]
Description=Call Status API Server
After=network.target

[Service]
Type=simple
User=www-data
WorkingDirectory=/opt/call-status-server
Environment="PATH=/opt/call-status-server/venv/bin"
Environment="STATUS_FILE=/var/lib/call-status/status.json"
Environment="PORT=5000"
ExecStart=/opt/call-status-server/venv/bin/python3 /opt/call-status-server/api_server.py
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
